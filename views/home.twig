{% extends 'layout/base.twig'%}

{% block stylesheet %}
 <link rel="stylesheet" href="/assets/home.css">
{% endblock %}

{% block content %}
 	<main>
 		<section class="banner">
                    <div class="highlight">
                        <div class="columns">
                            <div class="column highlight-item" style="background-image:;url({{
                            	highlight.url}});">
                                    <div class="has-text-weight-bold is-size-1-desktop">
                                       <h1>{{ highlight.title }}</h1>
                                    </div>
                            </div>
                        </div>
                    </div>
 			<div class="thumbnail">
				<div class="columns is-marginless">
				{% for item in thumbnail %}
					<a href="#" class="column thumbnail-item" style="background-image:
					url({{ item.image }});">
					{{ item.title }}
					</a>
					{% endfor %}
				</div>
			</div>
 	    </section>


 		<section>
 			<section class="section we-present">
 				<div class="container">
 					<div class="columns">
	 					<div class="column has-text-left">
	 						<a href="#">LASTET</a>
	 					</div>
	 					<div class="column has-text-centered">
	 						<a href="#">WE PRESENT</a>
	 					</div>
	 					<div class="column has-text-right">
	 						<a href="#">SEARCH</a>
	 					</div>
 					</div>
 			
 					<div class="columns is-multiline">
		 				{% for item in news %}
                         	<a href="#" class="column is-one-third">
                          		<div class="card-image">
                             		<figure class="image is-3by2">
                              			<img src="{{ item.image }}" alt="{{ item.title }}">
                          			</figure>
                           		</div>
                             	<div class="card-content">
                              		<h3 class="title is-spaced is-4">{{ item.title }}</h3>
                                 	<p>{{ item.shortDescription }}</p>
                                </div>
                            </a>
                    {% endfor %}
	 			</div>
	 		</div>
 		</section>
 	</main>
{% endblock %}
